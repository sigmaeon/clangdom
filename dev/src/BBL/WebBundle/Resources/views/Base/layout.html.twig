$(function() {
    $( "#prev" ).button({
      text: false,
      icons: {
        primary: "ui-icon-seek-prev"
      }
    })
    .click(function() {
    	player.previous();
    	if ( $("#play").text() === "play" ) {
    		$("#play").button("option", { label: "pause", icons: {primary: "ui-icon-pause" }});
    	}
        });
    $( "#play" ).button({
      text: false,
      icons: {
        primary: "ui-icon-play"
      }
    })
    .click(function() {
      var options;
      if ( $( this ).text() === "play" ) {
    	$("#jquery_jplayer_1").jPlayer("play");
        options = {
          label: "pause",
          icons: {
            primary: "ui-icon-pause"
          }
        };
      } else {
    	$("#jquery_jplayer_1").jPlayer("pause");
        options = {
          label: "play",
          icons: {
            primary: "ui-icon-play"
          }
        };
      }
      $( this ).button( "option", options );
    });
    $( "#stop" ).button({
      text: false,
      icons: {
        primary: "ui-icon-stop"
      }
    })
    .click(function() {
      $("#jquery_jplayer_1").jPlayer("stop");
      $( "#play" ).button( "option", {
        label: "play",
        icons: {
          primary: "ui-icon-play"
        }
      });
    });
    $( "#next" ).button({
      text: false,
      icons: {
        primary: "ui-icon-seek-next"
      }
    })
    .click(function() {
    	player.next();
    	if ( $("#play").text() === "play" ) {
    		$("#play").button("option", { label: "pause", icons: {primary: "ui-icon-pause" }});
    	}
     });
});


